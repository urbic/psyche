#!/bin/sh
#
# psylla script
# JPackage Project <http://www.jpackage.org/>

# Source functions library
_prefer_jre="true"
. /usr/share/java-utils/java-functions

# Source system prefs
if [ -f /etc/java/psylla.conf ] ; then
  . /etc/java/psylla.conf
fi

# Source user prefs
if [ -f $HOME/.psyllarc ] ; then
  . $HOME/.psyllarc
fi

# Configuration
MAIN_CLASS=coneforest.psylla.Psylla
BASE_FLAGS=""
BASE_OPTIONS=""
BASE_JARS=psylla

# Optional jars
CLASSPATH="$CLASSPATH:"$(build-classpath jline1 2>/dev/null) || :

# Set parameters
set_jvm
set_classpath $BASE_JARS
set_flags $BASE_FLAGS
set_options $BASE_OPTIONS

# Let's start
run "$@"
