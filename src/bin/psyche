#!/bin/sh
#
# psi script
# JPackage Project <http://www.jpackage.org/>

# Source functions library
_prefer_jre="true"
. /usr/share/java-utils/java-functions

# Source system prefs
if [ -f /etc/java/psyche.conf ] ; then
  . /etc/java/psyche.conf
fi

# Source user prefs
if [ -f $HOME/.psycherc ] ; then
  . $HOME/.psycherc
fi

# Configuration
MAIN_CLASS=coneforest.psi.Psi
BASE_FLAGS=""
BASE_OPTIONS=""
BASE_JARS=psyche

# Set parameters
set_jvm
set_classpath $BASE_JARS
set_flags $BASE_FLAGS
set_options $BASE_OPTIONS

# Let's start
run "$@"
