<?xml version="1.0" encoding="UTF-8"?>
<highlighters>

	<highlighter type="oneline-comment">
		<style>sharpBang</style>
		<start>#!</start>
	</highlighter>

	<highlighter type="oneline-comment">#</highlighter>

	<highlighter type="multiline-comment">
		<start>/#</start>
		<end>#/</end>
	</highlighter>

	<highlighter type="string">
		<string>'</string>
	</highlighter>

	<highlighter type="string">
		<string>"</string>
	</highlighter>

	<highlighter type="string">
		<string>~</string>
	</highlighter>

	<highlighter type="regex">
		<pattern>[Xx]`[\+\-]?[\dA-Fa-f]+</pattern>
		<style>number</style>
	</highlighter>

	<highlighter type="regex">
		<pattern>[Bb]`[\+\-]?[01]+</pattern>
		<style>number</style>
	</highlighter>

	<highlighter type="regex">
		<pattern>[Oo]`[\+\-]?[0-7]+</pattern>
		<style>number</style>
	</highlighter>

	<!--highlighter type="regex">
		<pattern>[\+\-]?(\d*\.\d+|\d+(\.\d*)?)([Ee][\+\-]?\d+)?([\+\-](\d*\.\d+|\d+(\.\d*)?)([Ee][\+\-]?\d+)?i)?</pattern>
		<style>number</style>
	</highlighter-->

	<highlighter type="regex">
		<pattern>[Cc]`([^\\]|\\[efranux])</pattern>
		<style>number</style>
	</highlighter>

	<highlighter type="regex">
		<pattern>/[A-Za-z_\.\$@][A-Za-z_\.\$@\d]*</pattern>
		<style>string</style>
	</highlighter>

	<highlighter type="regex">
		<pattern>%[^%]+%</pattern>
		<style>string</style>
	</highlighter>

	<highlighter type="regex">
		<pattern>(//)?[A-Za-z_\.\$@][A-Za-z_\.\$@\d]*</pattern>
		<style>keyword</style>
	</highlighter>

	<highlighter type="regex">
		<pattern>[\(\)\[\]&lt;&gt;?]</pattern>
		<style>structure</style>
	</highlighter>

</highlighters>
