<ivy-module version="2.0">

	<info
		organisation="${project.maven.groupId}"
		module="${project.maven.artifactId}"
		revision="${project.version}"
		/>

	<configurations>
		<conf name="core" visibility="private"/>
		<conf name="compile" extends="core" transitive="false" visibility="private"/>
		<conf name="runtime" extends="compile" description="everything needed to run this module"/>
	</configurations>

	<dependencies>
		<dependency org="jline" name="jline" rev="1.0" conf="*->default"/>
		<dependency org="junit" name="junit" rev="4.13.2" conf="*->default"/>
		<exclude org="org.hamcrest" artifact="hamcrest-core"/>
	</dependencies>

</ivy-module>
